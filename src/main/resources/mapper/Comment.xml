<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hello.hellospring.mapper.CommentMapper">

    <!--  코멘트 추가  -->
    <insert id="addComment" parameterType="hello.hellospring.vo.CommentReqVo" useGeneratedKeys="true" keyColumn="comment_id" keyProperty="commentId">
        insert into comment(content, date, project_id, member_id, issue_id)
        values(#{content}, sysdate(), #{projectId}, #{memberId}, #{issueId});
    </insert>

    <!--  현재 해당하는 프로젝트, 사용자, 이슈에 해당하는 코멘트 조회  -->
    <select id="selectByComId" parameterType="hello.hellospring.vo.CommentReqVo" resultType="hello.hellospring.vo.CommentResVo">
        select *
        from comment
        where comment_id = #{commentId}
        ;
    </select>

    <!--  코멘트 수정  -->
    <update id="updateComment" parameterType="hello.hellospring.vo.CommentReqVo">
        update comment
        set content = #{content}
        where comment_id = #{commentId}
        ;
    </update>

</mapper>
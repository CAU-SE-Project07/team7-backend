<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hello.hellospring.mapper.ProjectMapper">

    <!--  프로젝트 추가  -->
    <insert id="addProject" parameterType="hello.hellospring.vo.ProjectReqVo" useGeneratedKeys="true" keyColumn="project_id" keyProperty="projectId">
        insert into project(project_nm, project_desc)
        values(#{projectNm}, #{projectDesc})
        ;
    </insert>

    <!--  프로젝트 변경  -->
    <update id="updateProject" parameterType="hello.hellospring.vo.ProjectReqVo">
        UPDATE PROJECT
        SET project_nm = #{projectNm}, project_desc = #{projectDesc}
        WHERE PROJECT_ID = #{projectId}
        ;
    </update>

    <!--  프로젝트 조회(조건 별 가능)  -->
    <select id="selectProjects" parameterType="hello.hellospring.vo.ProjectReqVo" resultType="hello.hellospring.vo.ProjectResVo">
        select *
        from project
        <where>
            <!-- 프로젝트 아이디 존재할 시 -->
            <if test="projectId > 0">
                and project_id = #{projectId}
            </if>
        </where>
    </select>

</mapper>
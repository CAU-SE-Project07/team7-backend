<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="hello.hellospring.mapper.IssueMapper">
    <select id="selectAllByCondition" parameterType="hello.hellospring.vo.IssueReqVo" resultType="hello.hellospring.vo.IssueResVo">
        SELECT *
        FROM ISSUE
        <if test="state != null and state != ''">
            WHERE STATE = #{state}
        </if>
        ;
    </select>

    <update id="updateAssignee" parameterType="hello.hellospring.vo.IssueReqVo">
        UPDATE ISSUE
        SET ASSIGNEE = #{assignee}
        WHERE TITLE = #{TITLE}
    </update>
</mapper>